{
  "name": "soulvan-racing-cli-tools",
  "version": "1.0.0",
  "description": "Command-line tools for SoulvanRacing faction management and blockchain interactions",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "node build.js",
    "test": "node test.js",
    "install-global": "npm install -g .",
    "dev": "node --experimental-modules",
    "faction": "node src/cli/factionforge.js",
    "war": "node src/cli/warforge.js",
    "mythbook": "node src/cli/mythbook.js",
    "treasury": "node src/cli/treasuryvote.js"
  },
  "bin": {
    "factionforge": "./src/cli/factionforge.js",
    "warforge": "./src/cli/warforge.js",
    "mythbook": "./src/cli/mythbook.js",
    "treasuryvote": "./src/cli/treasuryvote.js"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "chalk": "^5.3.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "@types/node": "^20.5.0"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "gaming",
    "racing",
    "factions",
    "cli",
    "web3",
    "smart-contracts"
